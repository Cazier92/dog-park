<%- include('../partials/html-head') %>
<link rel="stylesheet" href="../stylesheets/index.css">
<%- include('../partials/nav') %>

<main>
  <section>
    <label>
      Dogs:
    </label>
    <form action="/profile/<%= profile._id %>/updateDogs?_method=PUT" method="POST">
      <% if (profile.dogs) { %>
        Edit Current Dogs:
        <% profile.dogs.forEach(dog => { %>
          <label>
            Dog Name:
            <input type="text" name="name" value="<%= dog.name %> ">
          </label>
          <label>
            Breed:
            <input type="text" name="breed" value="<%= dog.breed %>">
          </label>
          <label>
            Color:
            <input type="text" name="color" value="<%= dog.color %>">
          </label>
          <button type="submit">Edit Dog</button>
        <% }) %>
      <% } %>
  </form>
  Add New Dog:
  <form action="/profile/<%= profile._id %>/dogs" method="POST">
  <label>
    Dog Name:
    <input type="text" name="name" placeholder="Enter Dog's Name">
  </label>
  <label>
    Breed:
    <input type="text" name="breed" placeholder="Dog Breed">
  </label>
  <label>
    Color:
    <input type="text" name="color" placeholder="Dog Color">
  </label>
  <button type="submit">Add Dog</button>
  </form>
  </section>
</main>

<%- include('../partials/footer') %>