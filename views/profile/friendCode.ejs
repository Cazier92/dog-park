<%- include('../partials/html-head') %>
<link rel="stylesheet" href="../stylesheets/index.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <h3>Your Friend Code is: <%= profile.friendCode %></h3>
  </section>
  <section>
    <h3>Add Friends by Friend Code:</h3>
    <form action="/profile/<%= profile._id %>/addFriendByCode?_method=PATCH" method="POST">
      <input type="text" name="friendCode" placeholder="type 8-digit friend code here">
      <button type="submit" class="btn btn-outline-light">Add Friend</button>
    </form>
  </section>
  <h4><%= message %></h4>
</main>

<%- include('../partials/footer') %>