<%- include('../partials/html-head') %>
<link rel="stylesheet" href="../stylesheets/index.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
  <form action="/dogs" method="POST">
    <label>
      Dog Name:
      <input type="text" name="name" placeholder="Enter Dog's Name">
    </label>
    <br>
    <label>
      Breed:
      <input type="text" name="breed" placeholder="Dog Breed">
    </label>
    <br>
    <label>
      Color:
      <input type="text" name="color" placeholder="Dog Color">
    </label>
    <br>
    <label>
      Age:
      <input type="text" name="age" placeholder="Dog Age">
    </label>
    <br>
    <button type="submit" class="btn btn-outline-light">Add Dog</button>
    </form>
  </section>
</main>

<%- include('../partials/footer') %>