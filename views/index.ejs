<%- include('./partials/html-head') %>
<link rel="stylesheet" href="../stylesheets/index.css">
<%- include('./partials/nav') %>

<main>
  <h1> <%= user ? `Hello ${user.profile.name}` : "Welcome to the Dog Park!" %> </h1>
  <% if (user?.profile.avatar) { %>
    <div>
      <img
        src="<%= user.profile.avatar %>"
        alt="<%= user.profile.name %> avatar"
      />
    </div>
    <div>
      <h1>Welcome to the Dog Park!</h1>
    </div>
  <% } %>
  <section>
    <h4>A blogging and networking app, made just for dog owners!</h3>
  </section>
  <div>
    <p>Here's a random dog pic to brighten your day!</p>
    <img src="<%= randomDog %>" alt="Randomized photo of a dog" id="random-dog">
  </div>
</main>

<%- include('./partials/footer') %>
